<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @meal.meal_title %>
    </h2>
    <div class="item-img-content">
      <%= image_tag @meal.image ,class:"item-box-img" %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
        <%= @meal.meal_comment %>
      </span>
      <span class="item-postage">
        <%= @meal.taste.name %>
      </span>
      <span class="item-postage">
        <%= @meal.meal_time.name %>
      </span>
      <span class="item-postage">
        <%= @meal.meal_day %>
      </span>
    </div>
      <% if current_user.id == @meal.user_id %>
          <%= link_to "商品の編集", edit_meal_path(@meal.id), method: :get, class: "item-red-btn" %>
          <p class="or-text">or</p>
          <%= link_to "削除", meal_path(@meal.id), method: :delete, class:"item-destroy" %>
        <% else %>
          <% link_to "コメントする", "#_path(@meal.id)" ,class:"item-red-btn"%>
      <% end %>
  </div>
  <%# /商品の概要 %>
  <div class="back">
    <%=link_to '一覧へ戻る', root_path, class:"back-btn" %>
  </div>
</div>

